<div class="wrapper" data-controller="score">
  <div class="info">
    <%= form_tag root_path, method: :get, class: "score-form" do %>
      <%= text_field_tag :home_team, params[:home_team], class: "form-control", placeholder: "Home team", data: { action: 'keyup->score#updatePost', query: 'home'} %>
      <div class="d-flex">
        <div class="flex-grow-1">
          <%= text_field_tag :home_team_score, params[:home_team_score], class: "form-control", placeholder: "Home score", data: { action: 'keyup->score#updatePost', query: 'homeScore'} %>
        </div>
        <div class="mx-3 mb-2 d-flex align-items-center">-</div>
        <div class="flex-grow-1">
          <%= text_field_tag :away_team_score, params[:away_team_score], class: "form-control", placeholder: "Away score", data: { action: 'keyup->score#updatePost', query: 'awayScore'} %>
        </div>
      </div>
      <%= text_field_tag :away_team, params[:away_team], class: "form-control", placeholder: "Away team", data: { action: 'keyup->score#updatePost', query: 'away'} %>
      <%= file_field_tag :away_team, class: "form-control", placeholder: "Away team", data: { action: 'change->score#updatePostImage', query: 'away'} %>
    <% end %>
    <div class="d-flex justify-content-center align-items-center pt-3">
      <button id="downloadButton" class="btn btn-primary m-0" data-bs-toggle="modal" data-bs-target="#exampleModal">Preview Post</button>
    </div>
  </div>
  <div class="d-flex justify-content-center align-items-center">
    <div id="completedPost">
      <div class="rendered-post" style="background-image: url(<%= image_path 'background.jpg' %>)">
        <div class="post-image">
          <%= image_tag 'power-league.png', class: 'power-league' %>
          <div id="photo-preview">
          </div>
          <div class="post-content">
            <div class="full-time">
              <h2 class="poppins">FULL - TIME</h2>
            </div>
            <div class="score">
              <h2 class="poppins"><span class="home" id="home">HOME TEAM</span> <span class="home-score" id="homeScore">0</span> - <span class="away-score" id="awayScore">0</span> <span class="away" id="away">AWAY TEAM</span></h2>
            </div>
            <div class="stadium">
              <h2 class="poppins">POWERLEAGUE STADIUM</h2>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-body">

      </div>
      <div class="modal-footer">
        <button id="modalBtn" class="btn btn-primary m-0">Download Post</button>
      </div>
    </div>
  </div>
</div>
